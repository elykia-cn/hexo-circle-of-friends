{
  "version": 2,
  "public": true,
    "builds": [
    {
      "src": "/api/main.py",
      "use": "@vercel/python"
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/main.py"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    }
  ]
}
